<h1><%= @department.name %></h1>
<p><%= @department.description %></p>
<h2>Members</h2>
    <ul>
        <% @department.employees.each do |employee| %>
            <li><%= image_tag(employee.avatar) if employee.avatar.attached? %>
            <p><%= employee.name %></p>
            <p><%= employee.position %></p>
            </li>
        <% end %>
    </ul>